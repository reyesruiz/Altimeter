<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonGetAltitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="100dp"
        android:text="Get Altitude"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAltitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Altitude"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGetAltitude"
        app:layout_constraintEnd_toStartOf="@+id/textViewSpeed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Speed"
        app:layout_constraintBottom_toTopOf="@+id/buttonGetAltitude"
        app:layout_constraintEnd_toStartOf="@+id/textViewHeading"
        app:layout_constraintStart_toEndOf="@+id/textViewAltitude" />

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Heading"
        app:layout_constraintBottom_toTopOf="@+id/buttonGetAltitude"
        app:layout_constraintEnd_toEndOf="@id/textViewAngle"
        app:layout_constraintStart_toEndOf="@+id/textViewSpeed"
        />

    <TextView
        android:id="@+id/textViewAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="Angle"
        app:layout_constraintBottom_toTopOf="@+id/buttonGetAltitude"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewHeading"
        />

    <TextView
        android:id="@+id/textViewAltitudeStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewAltitude"
        app:layout_constraintEnd_toStartOf="@+id/textViewSpeedStatic"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewSpeedStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewSpeed"
        app:layout_constraintEnd_toStartOf="@+id/textViewHeadingStatic"
        app:layout_constraintStart_toEndOf="@+id/textViewAltitudeStatic" />

    <TextView
        android:id="@+id/textViewHeadingStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heading:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewHeading"
        app:layout_constraintEnd_toEndOf="@id/textViewAngleStatic"
        app:layout_constraintStart_toEndOf="@+id/textViewSpeedStatic" />

    <TextView
        android:id="@+id/textViewAngleStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angle:"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewAngle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewHeadingStatic" />

</androidx.constraintlayout.widget.ConstraintLayout>